<.flash_group flash={@flash} />
<div
  class="min-h-screen bg-gradient-to-r flex items-center justify-center p-4"
>
  <div class="rounded-lg border bg-card text-card-foreground w-full max-w-md bg-white/10 backdrop-blur-lg border-white/20 shadow-2xl">
    <div class="flex flex-col space-y-1.5 p-6 text-center">
      <div class="mx-auto mb-4 p-3 bg-white/20 rounded-full w-fit">
        <.icon name="hero-chat-bubble-left-right" class="h-8 w-8 text-white" />
      </div>
      <div class="font-semibold leading-none tracking-tight text-2xl text-white">Financial Advisor AI</div>
      <div class="text-sm text-muted-foreground text-white/80">
        Your intelligent assistant for client management, scheduling, and
        communication automation
      </div>
    </div>
    <div class="p-6 pt-0 space-y-4">
      <.link navigate="/auth/google">
      <.button class="w-full bg-white/20 hover:bg-white/30 text-white border-white/30 backdrop-blur-sm">
       <.icon name="hero-envelope" class="h-8 w-8 text-white" />
        Sign in with Google
      </.button>
      </.link>
      <p class="text-xs text-white/70 text-center">
        This will request permissions for Gmail and Google Calendar access
      </p>
    </div>
  </div>
</div>